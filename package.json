{
  "name": "gitlink",
  "displayName": "vsc-extension-gitlink",
  "description": "A VCS extension that opens a local file under Git version control in its remote host using the default browser.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gitlink.openInGitHub",
        "title": "Open in GitHub"
      },
      {
        "command": "gitlink.copyGitHubLink",
        "title": "Copy GitHub Link"
      },
      {
        "command": "gitlink.openSettings",
        "title": "Open GitLink Settings"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "gitlink.openInGitHub",
          "group": "navigation@1"
        },
        {
          "command": "gitlink.copyGitHubLink",
          "group": "navigation@2"
        }
      ],
      "editor/context": [
        {
          "command": "gitlink.openInGitHub",
          "group": "navigation@1"
        },
        {
          "command": "gitlink.copyGitHubLink",
          "group": "navigation@2"
        }
      ]
    },
    "configuration": {
      "title": "GitLink",
      "properties": {
        "gitlink.platforms": {
          "type": "array",
          "default": [
            {
              "name": "GitHub",
              "urlTemplate": "https://github.com/{repo:path}/blob/{branch}/{file:path}"
            }
          ],
          "description": "Custom Git hosting platforms configuration",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "User-defined name for the platform"
              },
              "urlTemplate": {
                "type": "string",
                "description": "URL template for the platform. Available variables: {repo:path}, {branch}, {file:path}, {file:name}"
              }
            }
          }
        },
        "gitlink.domainRegistry": {
          "type": "array",
          "default": [
            {
              "domain": "github.com",
              "platform": "GitHub"
            }
          ],
          "description": "Domain to platform mapping",
          "items": {
            "type": "object",
            "properties": {
              "domain": {
                "type": "string",
                "description": "Domain name (e.g., github.com, gitlab.com)"
              },
              "platform": {
                "type": "string",
                "description": "Platform name that matches one of the defined platforms"
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.9.1",
    "typescript": "^5.5.4",
    "ts-loader": "^9.5.1",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
