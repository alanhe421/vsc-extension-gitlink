{
  "name": "cn-alanhe-gitlink",
  "displayName": "Beautiful GitLink",
  "description": "A VCS extension that opens a local file under Git version control in its remote host using the default browser.",
  "version": "1.0.0",
  "icon": "resources/gitlink.png",
  "publisher": "alanhe",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "git",
    "github",
    "gitlab",
    "gitee",
    "tgit"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/alanhe421/vsc-extension-gitlink-issues.git",
    "bugs": {
      "url": "https://github.com/alanhe421/vsc-extension-gitlink-issues/issues",
      "email": "alan@1991421.cn"
    }
  },
  "contributes": {
    "commands": [
      {
        "command": "gitlink.openInGitHub",
        "title": "Open in GitHub"
      },
      {
        "command": "gitlink.copyGitHubLink",
        "title": "Copy GitHub Link"
      },
      {
        "command": "gitlink.openSettings",
        "title": "Open GitLink Settings"
      },
      {
        "command": "gitlink.copyGitHubMarkdownLink",
        "title": "Copy GitHub Markdown Link"
      },
      {
        "command": "gitlink.copyGitHubMarkdownSnippet",
        "title": "Copy GitHub Markdown Snippet"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "gitlink.openInGitHub",
          "group": "gitlink@1",
          "when": "!config.gitlink.useCompactMenu"
        },
        {
          "command": "gitlink.copyGitHubLink",
          "group": "gitlink@2",
          "when": "!config.gitlink.useCompactMenu"
        },
        {
          "submenu": "gitlink.submenu.others",
          "group": "gitlink@4",
          "when": "!config.gitlink.useCompactMenu"
        },
        {
          "submenu": "gitlink.submenu.all",
          "group": "gitlink@1",
          "when": "config.gitlink.useCompactMenu"
        }
      ],
      "editor/context": [
        {
          "command": "gitlink.openInGitHub",
          "group": "gitlink@1",
          "when": "!config.gitlink.useCompactMenu"
        },
        {
          "command": "gitlink.copyGitHubLink",
          "group": "gitlink@2",
          "when": "!config.gitlink.useCompactMenu"
        },
        {
          "submenu": "gitlink.submenu.others",
          "group": "gitlink@4",
          "when": "!config.gitlink.useCompactMenu"
        },
        {
          "submenu": "gitlink.submenu.all",
          "group": "gitlink@1",
          "when": "config.gitlink.useCompactMenu"
        }
      ],
      "gitlink.submenu.others": [
        {
          "command": "gitlink.copyGitHubMarkdownLink"
        },
        {
          "command": "gitlink.copyGitHubMarkdownSnippet"
        }
      ],
      "gitlink.submenu.all": [
        {
          "command": "gitlink.openInGitHub",
          "group": "gitlink@1"
        },
        {
          "command": "gitlink.copyGitHubLink",
          "group": "gitlink@2"
        },
        {
          "command": "gitlink.copyGitHubMarkdownLink",
          "group": "gitlink@3"
        },
        {
          "command": "gitlink.copyGitHubMarkdownSnippet",
          "group": "gitlink@4"
        }
      ]
    },
    "submenus": [
      {
        "id": "gitlink.submenu.others",
        "label": "GitLink Others"
      },
      {
        "id": "gitlink.submenu.all",
        "label": "GitLink"
      }
    ],
    "configuration": {
      "title": "GitLink",
      "properties": {
        "gitlink.platforms": {
          "type": "array",
          "default": [
            {
              "name": "GitHub",
              "urlTemplate": "https://{remote:url}/{repo:path}/blob/{branch}/{file:path}#L{line:start}-L{line:end}"
            },
            {
              "name": "Coding",
              "urlTemplate": "https://{remote:url:path:0}.coding.net/p/{remote:url:path:1}/d/{remote:url:path:2}/git/tree/{branch}/{file:path}#L{line:start}-L{line:end}"
            },
            {
              "name": "GitLab",
              "urlTemplate": "https://{remote:url}/{repo:path}/-/blob/{branch}/{file:path}#L{line:start}-{line:end}"
            },
            {
              "name": "TGit",
              "urlTemplate": "https://{remote:url}/{repo:path}/blob/{branch}/{file:path}#L{line:start}"
            }
          ],
          "description": "Custom Git hosting platforms configuration",
          "markdownDescription": "Currently supported Git hosting platforms: GitHub, Coding, GitLab, TGit. You can customize the URL template for each platform. Available template variables: {repo:path}, {branch}, {file:path}, {file:name}, {file:dir}, {remote:url}, {remote:url:path:n} (where n is the position of path segment, starting from 0)",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "User-defined name for the platform"
              },
              "urlTemplate": {
                "type": "string",
                "description": "URL template for the platform. Available variables: {repo:path}, {branch}, {file:path}, {file:name}, {file:dir}, {remote:url}, {remote:url:path:n} etc."
              }
            }
          }
        },
        "gitlink.domainRegistry": {
          "type": "array",
          "default": [
            {
              "domain": "github.com",
              "platform": "GitHub"
            },
            {
              "domain": "e.coding.net",
              "platform": "Coding"
            },
            {
              "domain": "git.code.tencent.com",
              "platform": "TGit"
            },
            {
              "domain": "git.woa.com",
              "platform": "TGit"
            },
            {
              "domain": "gitlab.com",
              "platform": "GitLab"
            },
            {
              "domain": "gitee.com",
              "platform": "GitHub"
            },
            {
              "domain": "git.weixin.qq.com",
              "platform": "TGit"
            },
            {
              "domain": "codeup.aliyun.com",
              "platform": "TGit"
            }
          ],
          "description": "Domain to platform mapping",
          "markdownDescription": "Currently supported domains: github.com, gitlab.com, gitee.com, e.coding.net etc.",
          "items": {
            "type": "object",
            "properties": {
              "domain": {
                "type": "string",
                "description": "Domain name (e.g., github.com, gitlab.com)"
              },
              "platform": {
                "type": "string",
                "description": "Platform name that matches one of the defined platforms"
              }
            }
          }
        },
        "gitlink.useCompactMenu": {
          "type": "boolean",
          "default": false,
          "description": "Use compact menu style",
          "markdownDescription": "When enabled, all GitLink commands will be grouped under a single submenu to reduce clutter in context menus. When disabled, main commands will appear directly in the context menu."
        }
      }
    }
  },
  "scripts": {
    "vscode:package": "npm run package && vsce package",
    "vscode:publish": "npm run package && vsce package && vsce publish",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.9.1",
    "standard-version": "^9.5.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.4",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  }
}
